dict(
  "sum", :=(sum, fun(arr, do(
    :=(i, 0),
    :=(result, 0),

      while(<(i, length(arr)), do(
        =(result, +(result, get(arr, i))),
        =(i, +(i, 1))
      )),

      result
  ))),

  "avg", :=(avg, fun(arr, do(
    /(sum(arr), length(arr))
  ))),

  "is_even", :=(is_even, fun(x,
    ==(%(x, 2), 0)
  )),

  "is_odd", :=(is_odd, fun(x,
    if(is_even(x), false, true)
  ))
)
